pkgname=7b7b-desktop
pkgver=1.0
pkgrel=0
pkgdesc="The desktop"
arch=("x86_64")
license=("BSD")
makedepends=("cmake")
depends=(
 "lib7b7b"
 "qt6-base"
 "qt6-svg"
)

build() {
	mkdir -p build
	cd build
	cmake ../../../ -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_INSTALL_DATADIR=share -DCMAKE_INSTALL_BINDIR=bin
	make
}


package() {
	cd build
	make DESTDIR="$pkgdir" install
	chmod +x "${pkgdir}/usr/bin/start-7b7b-desktop"
}
